{
  "name": "torrent-search",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve-netlify": "rm -rf functions/* && netlify-lambda serve src-functions",
    "serve": "npm run serve-netlify & vue-cli-service serve",
    "build": "netlify-lambda build src-functions && vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "@ctrl/deluge": "^1.4.1",
    "apollo-link": "^1.2.11",
    "apollo-server-lambda": "^2.4.8",
    "bufferutil": "^4.0.1",
    "core-js": "^2.6.5",
    "encoding": "^0.1.12",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "graphql": "^14.2.1",
    "graphql-tag": "^2.10.1",
    "lodash": "^4.17.11",
    "netlify-lambda": "^1.4.5",
    "pretty-bytes": "^5.2.0",
    "rarbg-api": "^1.1.3",
    "utf-8-validate": "^5.0.2",
    "vue": "^2.6.10",
    "vue-apollo": "^3.0.0-beta.28",
    "vue-cli-plugin-apollo": "^0.19.2",
    "vuedarkmode": "^0.3.23",
    "vuex": "^3.1.0",
    "vuex-persistedstate": "^2.5.4"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.6.0",
    "@vue/cli-plugin-eslint": "^3.6.0",
    "@vue/cli-service": "^3.6.0",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-template-compiler": "^2.5.21"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "eslint-config-airbnb-base"
    ],
    "rules": {
      "quotes": [
        "error",
        "single"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "semi": [
        "error",
        "always"
      ],
      "import/no-unresolved": "ignore"
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
